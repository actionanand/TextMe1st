<%=render 'shared/errors', obj: @user%>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter the username", autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter the email", autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control pwd", placeholder: "Enter the password", autocomplete: "off"%>
          <span class="input-group-btn">
            <button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
          </span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit (@user.new_record? ? "Sign Up" : "Update account"), class: 'btn btn-success btn-lg'%>
        </div>
      </div>
    <%end%>
    <div class="col-xs-4 col-xs-offset-4">
      <%=link_to "(Cancel the request and return to Article's page)", articles_path%>
    </div>
  </div>
</div>