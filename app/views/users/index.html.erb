<h1 align="center">All Texterz</h1>
<div align="center">
  <%=will_paginate%>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%=link_to gravatar_for(user), user_path(user)%></li>
          <li class="article-title">
            <%=link_to user.username, user_path(user)%>
          </li>
          <li><small><%=pluralize(user.articles.count, "article") if user.articles%></small></li>
          <div class="row">
            <%if logged_in? and current_user.admin?%>
              <li><%=link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure to delete this user?"},
              class: "btn btn-xs btn-danger"%></li>
              <li><%=link_to "Update credentials", edit_user_path(user), class: "btn btn-xs btn-success"%></li>
            <%end%>
          </div>
        </div>
      </div>
    </ul>
  <%end%>
  <%=will_paginate%>
</div>