<h1 id="img1" class="center">Welcome to Texterz Chat Room</h1>
<h3 class="center">A new way of chat</h3>

<div class="row chat-container">
  <div class="col-md-8 center-block">
    <div class="messages" id="messages">
      <%= render @messages %>
    </div>
    <hr/>
    <div class="message-container">
      <%= form_for(@message, remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <%= f.text_area :content, class: "form-control", data: {behavior: "room_speaker"}, placeholder: "Text me first!" %>
        <%= f.submit "send", class: 'btn btn-success', data: { send: "message" }%>
      <% end %>
    </div>
  </div>
</div>