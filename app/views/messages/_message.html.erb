<div class="message">
  <p>
    <small><em>Texted <%= time_ago_in_words(message.created_at) %> ago</em></small>
  </p>
  <p>
    <%=link_to gravatar_for(message.user, size: 50), user_path(message.user) %>
    <strong>
      <%= message.user.username.capitalize %>
    </strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
</div>